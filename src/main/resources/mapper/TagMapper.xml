<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zry.mapper.TagMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zry.entity.Tag">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="selectListByTagIds" resultType="com.zry.entity.Tag">
        select id ,name from t_tag where id in
        <foreach item="blogTag" collection="blogTagsList" open="(" separator="," close=")">
            #{blogTag.tagsId}
        </foreach>
    </select>
</mapper>
